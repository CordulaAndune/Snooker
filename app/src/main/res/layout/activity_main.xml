<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andriod.snookercounter.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/scoreView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/marginButton">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/namePlayer1"
                    style="@style/EditTextStyle"
                    android:hint="@string/player1"
                    android:padding="@dimen/marginButton" />

                <TextView
                    android:id="@+id/scoreView1"
                    style="@style/ScoreStyle"
                    android:text="" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginButton"
                    android:layout_marginRight="@dimen/marginButton"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/breakView1"
                        style="@style/BreakStyle"
                        android:text="@string/breakScore"
                        android:textSize="@dimen/sizePlayer" />

                    <TextView
                        android:id="@+id/scoreBreak1"
                        style="@style/BreakStyle"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/breakView1"
                        android:gravity="end"
                        android:text=""/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/marginRelLayout"
                    android:layout_marginTop="@dimen/marginRelLayout"
                    android:gravity="center">

                    <Button
                        android:id="@+id/redButton1"
                        style="@style/ButtonStyle"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="@dimen/marginButton"
                        android:layout_marginLeft="@dimen/marginButton"
                        android:layout_marginTop="@dimen/marginButton"
                        android:background="@drawable/redsolid"
                        android:onClick="scoreRed1"
                        android:text="@string/plus1" />

                    <Button
                        android:id="@+id/yellowButton1"
                        style="@style/ButtonStyle"
                        android:layout_alignParentTop="true"
                        android:layout_margin="@dimen/marginButton"
                        android:layout_toRightOf="@id/redButton1"
                        android:background="@drawable/yellowsolid"
                        android:onClick="scoreYellow1"
                        android:text="@string/plus2" />

                    <Button
                        android:id="@+id/greenButton1"
                        style="@style/ButtonStyle"
                        android:layout_below="@id/redButton1"
                        android:layout_marginBottom="@dimen/marginButton"
                        android:layout_marginLeft="@dimen/marginButton"
                        android:layout_marginTop="@dimen/marginButton"
                        android:background="@drawable/greensolid"
                        android:onClick="scoreGreen1"
                        android:text="@string/plus3" />

                    <Button
                        android:id="@+id/brownButton1"
                        style="@style/ButtonStyle"
                        android:layout_below="@id/redButton1"
                        android:layout_margin="@dimen/marginButton"
                        android:layout_toRightOf="@id/greenButton1"
                        android:background="@drawable/brownsolid"
                        android:onClick="scoreBrown1"
                        android:text="@string/plus4" />

                    <Button
                        android:id="@+id/blueButton1"
                        style="@style/ButtonStyle"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/greenButton1"
                        android:layout_marginBottom="@dimen/marginButton"
                        android:layout_marginLeft="@dimen/marginButton"
                        android:layout_marginTop="@dimen/marginButton"
                        android:background="@drawable/bluesolid"
                        android:onClick="scoreBlue1"
                        android:text="@string/plus5" />

                    <Button
                        android:id="@+id/pinkButton1"
                        style="@style/ButtonStyle"
                        android:layout_below="@id/brownButton1"
                        android:layout_margin="@dimen/marginButton"
                        android:layout_toRightOf="@id/blueButton1"
                        android:background="@drawable/pinksolid"
                        android:onClick="scorePink1"
                        android:text="@string/plus6" />

                    <Button
                        android:id="@+id/blackButton1"
                        style="@style/ButtonStyle"
                        android:layout_below="@id/pinkButton1"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/marginButton"
                        android:background="@drawable/blacksolid"
                        android:onClick="scoreBlack1"
                        android:text="@string/plus7" />

                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/queue_width"
                android:layout_height="match_parent"
                android:contentDescription="@string/queue"
                android:src="@drawable/queue" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/namePlayer2"
                    style="@style/EditTextStyle"
                    android:hint="@string/player2"
                    android:padding="@dimen/marginButton"/>

                <TextView
                    android:id="@+id/scoreView2"
                    style="@style/ScoreStyle"
                    android:text="" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginButton"
                    android:layout_marginRight="@dimen/marginButton">

                    <TextView
                        android:id="@+id/breakView2"
                        style="@style/BreakStyle"
                        android:text="@string/breakScore" />

                    <TextView
                        android:id="@+id/scoreBreak2"
                        style="@style/BreakStyle"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/breakView2"
                        android:gravity="end"
                        android:text="" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/marginRelLayout"
                    android:layout_marginTop="@dimen/marginRelLayout"
                    android:gravity="center">

                    <Button
                        android:id="@+id/redButton2"
                        style="@style/ButtonStyle"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="@dimen/marginButton"
                        android:background="@drawable/redsolid"
                        android:onClick="scoreRed2"
                        android:text="@string/plus1" />

                    <Button
                        android:id="@+id/yellowButton2"
                        style="@style/ButtonStyle"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="@dimen/marginButton"
                        android:layout_marginRight="@dimen/marginButton"
                        android:layout_marginTop="@dimen/marginButton"
                        android:layout_toRightOf="@id/redButton2"
                        android:background="@drawable/yellowsolid"
                        android:onClick="scoreYellow2"
                        android:text="@string/plus2" />

                    <Button
                        android:id="@+id/greenButton2"
                        style="@style/ButtonStyle"
                        android:layout_below="@id/redButton2"
                        android:layout_margin="@dimen/marginButton"
                        android:background="@drawable/greensolid"
                        android:onClick="scoreGreen2"
                        android:text="@string/plus3" />

                    <Button
                        android:id="@+id/brownButton2"
                        style="@style/ButtonStyle"
                        android:layout_below="@id/redButton2"
                        android:layout_marginBottom="@dimen/marginButton"
                        android:layout_marginRight="@dimen/marginButton"
                        android:layout_marginTop="@dimen/marginButton"
                        android:layout_toRightOf="@id/greenButton2"
                        android:background="@drawable/brownsolid"
                        android:onClick="scoreBrown2"
                        android:text="@string/plus4"/>

                    <Button
                        android:id="@+id/blueButton2"
                        style="@style/ButtonStyle"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/greenButton2"
                        android:layout_margin="@dimen/marginButton"
                        android:background="@drawable/bluesolid"
                        android:onClick="scoreBlue2"
                        android:text="@string/plus5" />

                    <Button
                        android:id="@+id/pinkButton2"
                        style="@style/ButtonStyle"
                        android:layout_below="@id/brownButton2"
                        android:layout_marginBottom="@dimen/marginButton"
                        android:layout_marginRight="@dimen/marginButton"
                        android:layout_marginTop="@dimen/marginButton"
                        android:layout_toRightOf="@id/blueButton2"
                        android:background="@drawable/pinksolid"
                        android:onClick="scorePink2"
                        android:text="@string/plus6" />

                    <Button
                        android:id="@+id/blackButton2"
                        style="@style/ButtonStyle"
                        android:layout_below="@id/pinkButton2"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/marginButton"
                        android:background="@drawable/blacksolid"
                        android:onClick="scoreBlack2"
                        android:text="@string/plus7"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scoreView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@drawable/resetbutton"
            android:onClick="resetScores"
            android:text="@string/reset"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>
</ScrollView>

